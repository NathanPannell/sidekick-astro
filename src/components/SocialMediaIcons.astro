---
import { socialMedia } from "~/data/config.js";
import IconFacebook from "~/assets/icons/facebook.svg";
import IconPhone from "~/assets/icons/phone.svg";
import IconEmail from "~/assets/icons/email.svg";
---

{
	Object.values(socialMedia).map((item: { url: string; label: string; icon: string }) => (
		<a href={item.url} target="_blank" aria-label={item.label} rel="noopener noreferrer" class="social-media-icon">
            {item.icon === "facebook" && <IconFacebook class="size-7 hover:text-fuchsia-500 transition p-1 -m-1" />}
            {item.icon === "email" && <IconEmail class="size-7 hover:text-fuchsia-500 transition p-1 -m-1" />}
            {item.icon === "phone" && <IconPhone class="size-7 hover:text-fuchsia-500 transition p-1 -m-1" />}
		</a>
	))
}
